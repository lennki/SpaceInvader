  <ItemGroup>
    <None Remove="images\gegner.png" />
    <None Remove="images\schuss.png" />
    <None Remove="images\spieler.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="images\schuss.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="images\spieler.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="images\gegner.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

